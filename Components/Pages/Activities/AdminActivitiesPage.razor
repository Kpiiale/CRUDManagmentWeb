@page "/admin/activities"
@using CRUDManagmentWeb.Models.Activity
@using CRUDManagmentWeb.Models.Company
@using CRUDManagmentWeb.Services
@inject ActivityService ActivityService
@inject CompanyService CompanyService

@rendermode InteractiveServer

<h3 class="mb-4">🏢 Actividades por Empresa</h3>
<p class="text-muted">Selecciona una empresa para ver solo sus actividades.</p>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (companies == null)
{
    <p>Cargando empresas...</p>
}
else
{
    <div class="mb-3">
        <label class="form-label fw-bold">Seleccionar Empresa:</label>
        <select class="form-select" @onchange="OnCompanyChanged">
            <option value="0">-- Seleccionar empresa --</option>
            @foreach (var c in companies)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
    </div>

    @if (activities == null)
    {
        <p>Cargando actividades...</p>
    }
    else if (!filteredActivities.Any())
    {
        <p>No hay actividades registradas para esta empresa.</p>
    }
    else
    {
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">📋 Actividades de @selectedCompanyName</h5>

                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Ubicación</th>
                            <th>Inicio</th>
                            <th>Fin</th>
                            <th>Precio</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in filteredActivities)
                        {
                            <tr>
                                <td>@a.Title</td>
                                <td>@a.LocationText</td>
                                <td>@(a.StartAt?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td>@(a.EndAt?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td>@($"{a.Price} {a.Currency}")</td>
                                <td>@a.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}

@code {
    private List<CompanyDto>? companies;
    private List<ActivityDto>? activities;
    private List<ActivityDto> filteredActivities = new();
    private int selectedCompanyId = 0;
    private string selectedCompanyName = string.Empty;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            companies = await CompanyService.GetAllAsync();
            activities = await ActivityService.GetAllAsync(0); // Trae todas y filtra en front
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar datos: {ex.Message}";
        }
    }

    private void OnCompanyChanged(ChangeEventArgs e)
    {
        selectedCompanyId = int.Parse(e.Value?.ToString() ?? "0");
        selectedCompanyName = companies?.FirstOrDefault(c => c.Id == selectedCompanyId)?.Name ?? "";

        if (selectedCompanyId == 0)
        {
            filteredActivities.Clear();
        }
        else
        {
            filteredActivities = activities?
                .Where(a => a.CompanyId == selectedCompanyId)
                .ToList() ?? new();
        }

        StateHasChanged();
    }
}

