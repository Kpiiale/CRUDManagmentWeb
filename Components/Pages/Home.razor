@page "/"
@inject NavigationManager NavManager
@rendermode InteractiveServer 

<div class="main-container">

    <!-- SECCIÓN 1: HERO (Naranja con efecto derretido) -->
    <header class="hero-section">
        <div class="hero-grid">
            <div class="hero-text">
                <span class="badge">BeeWeb</span>
                <h1>Descubre y Crea <br> Momentos Únicos</h1>
                <p>
                    La plataforma donde los emprendedores convierten su talento en talleres
                    y los usuarios encuentran su próxima pasión.
                </p>

                <div class="action-buttons">
                    <button class="btn-primary" @onclick="IrALogin">
                        Ingresar
                        <span class="btn-arrow">➜</span>
                    </button>
                    <button class="btn-outline" @onclick="IrRegistrar">
                        Registrarte
                    </button>
                </div>
            </div>

            <!-- Imagen decorativa (Abejas/Miel/Talleres) -->
            <div class="hero-visual">
                <div class="floating-card c-1">Taller de Arte</div>
                <div class="floating-card c-2">Clase de Cocina</div>
                <div class="floating-card c-3">Manualidades</div>
                <div class="floating-card c-4">Eventos Deportivos</div>
                <div class="visual-circle"></div>
                <!-- Aquí iría tu imagen PNG transparente de miel o abejas -->
            </div>
        </div>

        <!-- SVG DECORATIVO (Efecto Miel Goteando) -->
        <div class="honey-drip">
            <svg viewBox="0 0 1440 320">
                <path fill="#fffbeb" fill-opacity="1" d="M0,192L48,202.7C96,213,192,235,288,229.3C384,224,480,192,576,165.3C672,139,768,117,864,128C960,139,1056,181,1152,197.3C1248,213,1344,203,1392,197.3L1440,192L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
            </svg>
        </div>
    </header>

    <!-- SECCIÓN 2: CÓMO FUNCIONA (Features) -->
    <section class="features-section">
        <div class="section-title">
            <small>Nuestra Colmena</small>
            <h2>Elige tu camino en BeeWeb</h2>
        </div>

        <div class="cards-container">
            <!-- Card Emprendimiento -->
            <div class="info-card business">
                <div class="icon-box">➊</div>
                <h3>Soy Emprendedor</h3>
                <p>Publica talleres presenciales (cocina, manualidades, yoga). Gestiona inscripciones y pagos en un solo lugar.</p>
                <ul>
                    <li>✓ Panel de gestión</li>
                    <li>✓ Pagos seguros</li>
                    <li>✓ Visibilidad local</li>
                </ul>
            </div>

            <!-- Card Usuario -->
            <div class="info-card user">
                <div class="icon-box">➋</div>
                <h3>Soy Usuario</h3>
                <p>Explora actividades cerca de ti. Desde aprender a pintar hasta catas de vino. Reserva tu cupo fácilmente.</p>
                <ul>
                    <li>✓ Reservas rápidas</li>
                    <li>✓ Reseñas reales</li>
                    <li>✓ Historial de eventos</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- SECCIÓN 3: CATEGORÍAS POPULARES -->
    <section class="categories-section">
        <h2>Explora Actividades</h2>
        <div class="cat-grid">
            <div class="cat-item">
                <span class="cat-emoji">🎨</span>
                <span>Arte</span>
            </div>
            <div class="cat-item">
                <span class="cat-emoji">🥘</span>
                <span>Cocina</span>
            </div>
            <div class="cat-item">
                <span class="cat-emoji">🧘‍♀️</span>
                <span>Bienestar</span>
            </div>
            <div class="cat-item">
                <span class="cat-emoji">🧶</span>
                <span>Manualidades</span>
            </div>
        </div>
    </section>

    <!-- FOOTER NEGRO -->
    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-brand">
                <h3>BeeWeb 🐝</h3>
                <p>Conectando pasiones con experiencias.</p>
            </div>
            <div class="footer-links">
                <h4>Compañía</h4>
                <a href="#">Nosotros</a>
                <a href="#">Blog</a>
                <a href="#">Contacto</a>
            </div>
            <div class="footer-links">
                <h4>Legal</h4>
                <a href="#">Términos</a>
                <a href="#">Privacidad</a>
            </div>
            <div class="footer-newsletter">
                <h4>Únete a la comunidad</h4>
                <div class="input-group">
                    <input type="email" placeholder="Tu correo..." />
                    <button>Suscribir</button>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2023 BeeWeb. Todos los derechos reservados.</p>
        </div>
    </footer>

</div>

@code {
    private void IrALogin()
    {
        NavManager.NavigateTo("/login");
    }
    private void IrRegistrar()
    {
        NavManager.NavigateTo("/register");
    }
}