@page "/"
@inject NavigationManager NavManager
@rendermode InteractiveServer 

<div class="home-page">
    <div class="home-card">
        <h1 class="home-title">Bienvenido a la App</h1>
        <p class="home-subtitle">Gestiona usuarios fácilmente desde aquí.</p>
        <div class="home-actions">
            <button class="login-btn" @onclick="IrALogin">
                <span class="btn-text">Ingresar</span>
                <span class="btn-loader">
                    <span class="loader-bar"></span>
                    <span class="loader-bar"></span>
                    <span class="loader-bar"></span>
                </span>
            </button>
            <button class="login-btn" @onclick="IrRegistrar">
                <span class="btn-text">Registrarte</span>
                <span class="btn-loader">
                    <span class="loader-bar"></span>
                    <span class="loader-bar"></span>
                    <span class="loader-bar"></span>
                </span>
            </button>
        </div>
    </div>
</div>

@code {
    private void IrALogin()
    {
        NavManager.NavigateTo("/login");
    }
    private void IrRegistrar()
    {
        NavManager.NavigateTo("/register");
    }
}