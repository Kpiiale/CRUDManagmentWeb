@page "/company"
@using CRUDManagmentWeb.Components.Pages.Auth
@using CRUDManagmentWeb.Components.Shared
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager NavManager
@rendermode InteractiveServer

    <div class="main-page">
        <div class="main-card">
            <h1 class="main-title">Bienvenido a tu empresa</h1>
            <p class="main-subtitle">Gestiona empleados y actividades fácilmente desde aquí.</p>
            <div class="main-actions">
                <button class="main-btn" @onclick="GoEmployees">
                    <span class="btn-text">Empleados</span>
                    <span class="btn-loader">
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                    </span>
                </button>
                <button class="main-btn" @onclick="GoActivities">
                    <span class="btn-text">Actividades</span>
                    <span class="btn-loader">
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
@code {
    private void GoEmployees()
    {
        NavManager.NavigateTo("/company/employees");
    }
    private void GoActivities()
    {
        NavManager.NavigateTo("/company/activities");
    }
}