@page "/admin"
@using CRUDManagmentWeb.Components.Pages.Auth
@using CRUDManagmentWeb.Components.Shared
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager NavManager
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]

<div class="main-page">
        <div class="main-card">
            <h1 class="main-title">Bienvenido a MANAGMENT</h1>
            <p class="main-subtitle">Gestiona la app fácilmente desde aquí.</p>
            <div class="main-actions">
                <button class="main-btn" @onclick="GoUsers">
                    <span class="btn-text">Usuarios</span>
                    <span class="btn-loader">
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                    </span>
                </button>
                <button class="main-btn" @onclick="GoCompanies">
                    <span class="btn-text">Empresas</span>
                    <span class="btn-loader">
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                    </span>
                </button>
                <button class="main-btn" @onclick="GoActivities">
                    <span class="btn-text">Actividades</span>
                    <span class="btn-loader">
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                    </span>
                </button>
                <button class="main-btn" @onclick="GoCategories">
                    <span class="btn-text">Categorías</span>
                    <span class="btn-loader">
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                        <span class="loader-bar"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>

@code {
    private void GoUsers()
    {
        NavManager.NavigateTo("/admin/users");
    }
    private void GoCompanies()
    {
        NavManager.NavigateTo("/admin/companies");
    }
    private void GoActivities()
    {
        NavManager.NavigateTo("/admin/activities");
    }
    private void GoCategories()
    {
        NavManager.NavigateTo("/admin/categories");
    }

    
}