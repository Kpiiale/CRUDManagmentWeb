@page "/register"
@using CRUDManagmentWeb.Models.Auth
@rendermode InteractiveServer
@inject CRUDManagmentWeb.Services.AuthService AuthService
@inject NavigationManager NavigationManager

<div class="register-container">
    <div class="register-card">
        <div class="register-header">        
            <h2>Registro de Usuario</h2>
            <p>Crea tu cuenta</p>
        </div>

        <EditForm Model="@registerInput" OnValidSubmit="@HandleRegister">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="register-group">
                <label class="register-label">Nombre de usuario</label>
                <div class="register-input-wrapper">
                    <InputText @bind-Value="registerInput.Username" placeholder="Ingresa tu nombre de usuario" />
                </div>
            </div>

            <div class="register-group">
                <label class="register-label">Email</label>
                <div class="register-input-wrapper">
                    <InputText @bind-Value="registerInput.Email" type="email" placeholder="Ingresa tu correo" />
                </div>
            </div>

            <div class="register-group">
                <label class="register-label">Contraseña</label>
                <div class="register-input-wrapper">
                    <InputText @bind-Value="registerInput.Password" type="password" placeholder="Crea una contraseña" />
                </div>
            </div>

            <button type="submit" class="register-btn">
                <span class="btn-text">Registrar</span>
                <span class="btn-loader">
                    <span class="loader-bar"></span>
                    <span class="loader-bar"></span>
                    <span class="loader-bar"></span>
                </span>
            </button>
        </EditForm>

        <div class="signup-link">
            <p>¿Ya tienes cuenta? <a href="/login">Inicia sesión</a></p>
        </div>

        @if (!string.IsNullOrEmpty(SuccessMessage))
        {
            <div class="success-message show">
                <div class="success-icon">✓</div>
                <h3>¡Registro exitoso!</h3>
                <p>@SuccessMessage</p>
            </div>
        }

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="error-message show">@ErrorMessage</div>
        }
    </div>
</div>

@code {
    private RegisterInputModel registerInput = new();
    private string? SuccessMessage;
    private string? ErrorMessage;

    private async Task HandleRegister()
    {
        try
        {
            var registerRequest = new RegisterRequest(
                registerInput.Username,
                registerInput.Email,
                registerInput.Password,
                "system"
            );



            bool registered = await AuthService.RegisterAsync(registerRequest);

            if (registered)
            {
                SuccessMessage = "Usuario registrado con éxito. Ahora puedes iniciar sesión.";
                NavigationManager.NavigateTo("/login", true);
            }
            else
            {
                ErrorMessage = "Error al registrar usuario. Verifica los datos ingresados.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Ocurrió un error: {ex.Message}";
        }
    }

    public class RegisterInputModel
    {
        public string Username { get; set; } = "";
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
    }
}
