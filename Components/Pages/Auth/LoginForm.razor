@page "/login"
@rendermode InteractiveServer
@using CRUDManagmentWeb.Models.Auth

@inject CRUDManagmentWeb.Services.AuthService AuthService
@inject NavigationManager NavigationManager

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            
            <h2>Iniciar Sesión</h2>
            <p>Accede a tu cuenta</p>
        </div>

        <EditForm Model="@loginInput" OnValidSubmit="@HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label class="form-label">Usuario</label>
                <div class="input-wrapper">
                    <InputText @bind-Value="loginInput.Username" placeholder="Ingresa tu usuario" />
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Contraseña</label>
                <div class="input-wrapper password-wrapper">
                    <InputText @bind-Value="loginInput.Password" type="password" placeholder="Ingresa tu contraseña" />
                    <!-- Puedes agregar un botón de mostrar contraseña aquí si lo deseas -->
                </div>
            </div>

            <button type="submit" class="login1-btn">
                <span class="btn-text">Ingresar</span>
                <span class="btn-loader">
                    <span class="loader-bar"></span>
                    <span class="loader-bar"></span>
                    <span class="loader-bar"></span>
                </span>
            </button>
        </EditForm>

        <div class="signup-link">
            <p>¿No tienes una cuenta? <a href="/register">Regístrate aquí</a></p>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="error-message show">@ErrorMessage</div>
        }
    </div>
</div>

@code {
    private LoginInputModel loginInput = new();
    private string? ErrorMessage;

    private async Task HandleLogin()
    {
        try
        {
            var loginRequest = new LoginRequest
            {
                UsernameOrEmail = loginInput.Username,
                Password = loginInput.Password
            };

            var authResponse = await AuthService.LoginAsync(loginRequest);

            if (authResponse is not null)
            {
       
                switch (authResponse.Role)
                {
                    case "Admin":
                        NavigationManager.NavigateTo("/admin", true);
                        break;
                    case "Company":
                        NavigationManager.NavigateTo("/company", true);
                        break;
                    case "Employee":
                        NavigationManager.NavigateTo("/employee", true);
                        break;
                    default:
                        NavigationManager.NavigateTo("/homeuser", true);
                        break;
                }
            }
            else
            {
                ErrorMessage = "Usuario o contraseña incorrectos.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Ocurrió un error: {ex.Message}";
        }
    }

    public class LoginInputModel
    {
        public string Username { get; set; } = "";
        public string Password { get; set; } = "";
    }
}
